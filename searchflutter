          backgroundColor: Color(0xff51D0F8),
        ),
        BottomNavigationBarItem(
          icon: Text(''),
          label: '',
          backgroundColor: Color(0xff51D0F8),
        ),
        BottomNavigationBarItem(
          icon: Text(''),
          label: '',
          backgroundColor: Color(0xff51D0F8),
        ),
      ]),
    );
  }
