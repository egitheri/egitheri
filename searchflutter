  // late String coba = "";

  Stream<QuerySnapshot> _TransactionsStream =
      FirebaseFirestore.instance.collection('transactions').snapshots();

 

  void _searchController(String enteredKeyword) {
    setState(() {
      _queryText = enteredKeyword;
    });
   
  }

  get builder => null;

  Widget buildSearch() {
    return Container(
      child: Column(
        mainAxisAlignment: MainAxisAlignment.center,
        children: [
          TextFormField(
            onChanged: (value) => _searchController(value),
            decoration: InputDecoration(
                prefixIcon: Icon(
                  Icons.search,
                  size: 28,
                ),
                hintText: 'Cari Transaksi',
                hintStyle: TextStyle(
                    color: Colors.black, fontSize: 16, fontFamily: "MulishBold")
                // border: OutlineInputBorder(),
                ),
          )
        ],
      ),
    );
  }

  Widget buildTransaksi() {
    return Container(
